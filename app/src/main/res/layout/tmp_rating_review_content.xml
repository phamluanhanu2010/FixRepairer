<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:padding="@dimen/confirm_ui_padding_w">


    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/CustomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.5" />


    <TextView
        android:id="@+id/tv_time"
        style="@style/CusTextViewContentLinkTheme"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ratingBar"
        android:gravity="right"
        android:text="Thursday, May 19" />


    <TextView
        android:id="@+id/tv_title_rating_review"
        style="@style/CusTextViewTitleTheme"
        android:layout_width="match_parent"
        android:layout_below="@+id/ratingBar"
        android:text="Hoàng Hà" />

    <TextView
        android:id="@+id/tv_title_content_service"
        style="@style/CusTextViewContentTheme"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_title_rating_review"
        android:layout_marginTop="@dimen/confirm_ui_padding_w"
        android:layout_toStartOf="@+id/tv_location"
        android:text="Sửa màn hình máy tính"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tv_location" />

    <!--<com.strategy.intecom.vtc.fixrepairer.view.custom.imagecus.ImageViewSize-->
        <!--android:id="@+id/img_icon_location"-->
        <!--android:layout_width="@dimen/size_icon_in_app"-->
        <!--android:layout_height="@dimen/size_icon_in_app"-->
        <!--android:layout_alignBottom="@+id/tv_title_content_service"-->
        <!--android:layout_toStartOf="@+id/tv_location"-->
        <!--android:src="@android:drawable/ic_menu_mylocation"-->
        <!--android:layout_toLeftOf="@+id/tv_location" />-->

    <TextView
        android:id="@+id/tv_location"
        style="@style/CusTextViewContentTheme"
        android:maxWidth="100.0dp"
        android:text="23 Lạc trung"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_title_content_service"/>

    <TextView
        android:id="@+id/tv_content_service"
        style="@style/CusTextViewContentTheme"
        android:layout_below="@+id/tv_title_content_service"
        android:layout_marginTop="@dimen/confirm_ui_padding_w"
        android:text="Tôi là thợ sửa máy tính chuyenj nghiệp phục vụ nhiệt tình, hãy gọi cho tôi, tôi sẽ phục vụ các bạn chu đáo." />

    <com.strategy.intecom.vtc.fixrepairer.view.custom.imagecus.ImageViewSize
        android:id="@+id/img_comment"
        android:layout_width="@dimen/size_icon_in_app"
        android:layout_height="@dimen/size_icon_in_app"
        android:layout_below="@+id/tv_content_service"
        android:layout_marginTop="@dimen/confirm_ui_padding_w"
        android:layout_toLeftOf="@+id/tv_comment"
        android:src="@android:drawable/sym_action_chat" />

    <TextView
        style="@style/CusTextViewContentLinkTheme"
        android:id="@+id/tv_comment"
        android:autoLink="all"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/img_comment"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_content_service"
        android:gravity="bottom"
        android:maxWidth="100.0dp"
        android:text="@string/title_user_info_rating_review_post_comment" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_marginTop="@dimen/confirm_ui_padding_w"
         android:layout_below="@+id/tv_comment"
        android:background="@color/color_gray"/>
</RelativeLayout>