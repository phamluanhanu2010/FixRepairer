<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/confirm_ui_padding_w"
        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
        android:layout_marginRight="@dimen/confirm_ui_padding_w"
        android:background="@drawable/background_border_while"
        android:paddingBottom="@dimen/confirm_ui_padding_w">


        <TextView
            android:id="@+id/btn_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/confirm_ui_padding_w"
            android:layout_marginLeft="@dimen/confirm_ui_padding_w"
            android:layout_marginTop="@dimen/confirm_ui_padding_w"
            android:background="@drawable/ripple_selector_yellow_border"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="@string/btn_new_job_promo"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/CusTextViewTitleTheme"
            android:layout_marginBottom="@dimen/confirm_ui_padding_w"
            android:layout_marginLeft="@dimen/confirm_ui_padding_w"
            android:layout_marginTop="@dimen/confirm_ui_padding_w"
            android:text="Hoàng Hà"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_times"
            style="@style/CusTextViewContentLinkTheme"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/confirm_ui_padding_w"
            android:layout_marginRight="@dimen/confirm_ui_padding_w"
            android:layout_marginTop="@dimen/confirm_ui_padding_w"
            android:layout_toRightOf="@+id/tv_name"
            android:gravity="right"
            android:text="Thursday, May 19" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.0sp"
            android:layout_below="@+id/tv_name"
            android:background="@color/color_gray" />

        <LinearLayout
            android:id="@+id/lout_container_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/confirm_ui_padding_w"
            android:layout_marginRight="@dimen/confirm_ui_padding_w"
            android:layout_marginTop="@dimen/confirm_ui_padding_w"
            android:gravity="center">


            <com.strategy.intecom.vtc.fixrepairer.view.custom.imagecus.ImageViewSize
                android:id="@+id/img_icon_job"
                android:layout_width="@dimen/size_icon_in_app"
                android:layout_height="@dimen/size_icon_in_app"
                android:layout_below="@+id/lout_container_title"
                android:src="@mipmap/icon_suachua" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/CusTextViewContentTheme"
                android:layout_weight="1"
                android:text="Sửa máy tính" />

            <com.strategy.intecom.vtc.fixrepairer.view.custom.imagecus.ImageViewSize
                android:id="@+id/img_icon_money"
                android:layout_width="@dimen/size_icon_in_app"
                android:layout_height="@dimen/size_icon_in_app"
                android:src="@mipmap/ic_money" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/CusTextViewContentTheme"
                android:text="150,000" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lout_container_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lout_container_title"
            android:layout_margin="@dimen/confirm_ui_padding_w"
            android:gravity="center|left">

            <com.strategy.intecom.vtc.fixrepairer.view.custom.imagecus.ImageViewSize
                android:id="@+id/img_icon_location"
                android:layout_width="@dimen/size_icon_in_app"
                android:layout_height="@dimen/size_icon_in_app"
                android:src="@mipmap/ic_location" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/CusTextViewContentTheme"
                android:layout_weight="1"
                android:text="23 Lạc trung" />

            <com.strategy.intecom.vtc.fixrepairer.view.custom.imagecus.ImageViewSize
                android:id="@+id/img_icon_ship"
                android:layout_width="@dimen/size_icon_in_app"
                android:layout_height="@dimen/size_icon_in_app"
                android:src="@drawable/ic_shiper" />

            <TextView
                android:id="@+id/tv_money_ship"
                style="@style/CusTextViewContentTheme"
                android:text="20,000"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_context"
            style="@style/CusTextViewTitleTheme"
            android:layout_below="@+id/lout_container_location"
            android:layout_weight="1"
            android:text="Người dùng"
            android:textColor="@color/color_gray"
            android:textStyle="normal"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>

