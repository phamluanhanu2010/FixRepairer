<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lout_container_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_title_rating_review"
        style="@style/CusTextViewTitleTheme"
        android:layout_marginTop="@dimen/confirm_ui_padding_w"
        android:text="@string/title_user_info_rating_review" />

    <LinearLayout
        android:id="@+id/lout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_rating_review"
        android:layout_marginTop="@dimen/confirm_ui_padding_w"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lout_container_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/confirm_ui_padding_h"
            android:paddingLeft="@dimen/confirm_ui_padding_h">

            <TextView
                android:id="@+id/tv_title_rating_count"
                style="@style/CusTextViewContentTheme"
                android:layout_alignParentTop="true"
                android:text="3.5"
                android:textSize="@dimen/size_text_rating" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/CustomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                android:layout_toRightOf="@+id/tv_title_rating_count"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3.5" />

            <TextView
                android:id="@+id/tv_count_nhanxet"
                style="@style/CusTextViewContentTheme"
                android:layout_below="@+id/ratingBar"
                android:layout_toRightOf="@+id/tv_title_rating_count"
                android:textColor="@color/color_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lout_container_rating_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/confirm_ui_padding_w">


            <TextView
                android:id="@+id/tv_title"
                style="@style/CusTextViewContentTheme"
                android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                android:text="@string/title_user_info_rating_review_distribution"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginBottom="@dimen/confirm_ui_padding_w"
                android:layout_marginLeft="@dimen/confirm_ui_padding_h"
                android:layout_marginRight="@dimen/confirm_ui_padding_h"
                android:layout_marginTop="@dimen/confirm_ui_padding_w">

                <LinearLayout
                    android:id="@+id/lout_icon_star_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="@dimen/size_icon_in_app"
                        android:layout_height="@dimen/size_icon_in_app"
                        android:src="@drawable/ic_star_gray" />

                    <TextView
                        android:id="@+id/tv_title_5"
                        style="@style/CusTextViewContentTheme"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:text="5" />

                    <ProgressBar
                        android:id="@+id/probar_5"
                        style="@style/CustomProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/confirm_ui_padding_h"
                        android:layout_marginLeft="3.0dp"
                        android:layout_weight="9"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/tv_title_count_5"
                        style="@style/CusTextViewContentTheme"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lout_icon_star_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lout_icon_star_5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="@dimen/size_icon_in_app"
                        android:layout_height="@dimen/size_icon_in_app"
                        android:src="@drawable/ic_star_gray" />

                    <TextView
                        android:id="@+id/tv_title_4"
                        style="@style/CusTextViewContentTheme"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:text="4" />

                    <ProgressBar
                        android:id="@+id/probar_4"
                        style="@style/CustomProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/confirm_ui_padding_h"
                        android:layout_marginLeft="3.0dp"
                        android:layout_weight="9"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/tv_title_count_4"
                        style="@style/CusTextViewContentTheme"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lout_icon_star_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lout_icon_star_4"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="@dimen/size_icon_in_app"
                        android:layout_height="@dimen/size_icon_in_app"
                        android:src="@drawable/ic_star_gray" />

                    <TextView
                        android:id="@+id/tv_title_3"
                        style="@style/CusTextViewContentTheme"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:text="3" />


                    <ProgressBar
                        android:id="@+id/probar_3"
                        style="@style/CustomProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/confirm_ui_padding_h"
                        android:layout_marginLeft="3.0dp"
                        android:layout_weight="9"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/tv_title_count_3"
                        style="@style/CusTextViewContentTheme"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lout_icon_star_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lout_icon_star_3"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="@dimen/size_icon_in_app"
                        android:layout_height="@dimen/size_icon_in_app"
                        android:src="@drawable/ic_star_gray" />

                    <TextView
                        android:id="@+id/tv_title_2"
                        style="@style/CusTextViewContentTheme"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:text="2" />


                    <ProgressBar
                        android:id="@+id/probar_2"
                        style="@style/CustomProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/confirm_ui_padding_h"
                        android:layout_marginLeft="3.0dp"
                        android:layout_weight="9"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/tv_title_count_2"
                        style="@style/CusTextViewContentTheme"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lout_icon_star_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lout_icon_star_2"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="@dimen/size_icon_in_app"
                        android:layout_height="@dimen/size_icon_in_app"
                        android:src="@drawable/ic_star_gray" />

                    <TextView
                        android:id="@+id/tv_title_1"
                        style="@style/CusTextViewContentTheme"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:text="1" />

                    <ProgressBar
                        android:id="@+id/probar_1"
                        style="@style/CustomProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/confirm_ui_padding_h"
                        android:layout_marginLeft="3.0dp"
                        android:layout_weight="9"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/tv_title_count_1"
                        style="@style/CusTextViewContentTheme"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@+id/lout_container"
        android:background="@color/color_gray" />
</RelativeLayout>