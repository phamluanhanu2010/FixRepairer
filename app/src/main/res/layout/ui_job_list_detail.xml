<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/app_bar_back" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lout_container_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_gray"
                android:orientation="vertical"
                android:paddingTop="@dimen/confirm_ui_padding_w">

                <LinearLayout
                    android:id="@+id/lout_container_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top">

                    <TextView
                        android:id="@+id/tv_title_job"
                        style="@style/CusTextViewTitleTheme"
                        android:layout_weight="1"
                        android:text="Sửa máy tính, cài lại win, kiểm tra ram, cpu, và các linh kiện khác" />

                    <com.strategy.intecom.vtc.fixrepairer.view.custom.imagecus.ImageViewSize
                        android:id="@+id/img_icon_money"
                        android:layout_width="@dimen/size_icon_in_app"
                        android:layout_height="@dimen/size_icon_in_app"
                        android:src="@drawable/ic_card" />

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/CusTextViewContentTheme"
                        android:layout_marginRight="@dimen/confirm_ui_padding_w"
                        android:text="150,000" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_title_time_content"
                    style="@style/CusTextViewContentTheme"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/lout_container_title"
                    android:layout_marginRight="@dimen/confirm_ui_padding_w"
                    android:layout_marginTop="@dimen/confirm_ui_padding_w"
                    android:gravity="right"
                    android:text="09:00 AM Thursday, May 19, 2016" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/CusTextViewTitleTheme"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_title_time_content"
                    android:text="Hoàng Hà"
                    android:textStyle="normal" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="@dimen/confirm_ui_padding_w"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_call"
                        style="@style/CusButtonTheme"
                        android:layout_marginBottom="@dimen/confirm_ui_padding_w"
                        android:layout_marginRight="@dimen/confirm_ui_padding_w"
                        android:layout_marginTop="@dimen/confirm_ui_padding_w"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_selector_yellow"
                        android:drawableLeft="@mipmap/ic_call"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/btn_job_detail_call"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn_email"
                        style="@style/CusButtonTheme"
                        android:layout_marginBottom="@dimen/confirm_ui_padding_w"
                        android:layout_marginRight="@dimen/confirm_ui_padding_w"
                        android:layout_marginTop="@dimen/confirm_ui_padding_w"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_selector_yellow"
                        android:drawableLeft="@mipmap/ic_email"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/btn_job_detail_sms"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn_map"
                        style="@style/CusButtonTheme"
                        android:layout_marginBottom="@dimen/confirm_ui_padding_w"
                        android:layout_marginRight="@dimen/confirm_ui_padding_w"
                        android:layout_marginTop="@dimen/confirm_ui_padding_w"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_selector_yellow"
                        android:drawableLeft="@mipmap/ic_location"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/btn_job_detail_map"
                        android:textStyle="normal" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title_status"
                style="@style/CusEditTextTheme"
                android:layout_marginBottom="@dimen/confirm_ui_padding_w"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:text="Đang đến"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_text_app_title"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="@dimen/confirm_ui_padding_w">


                <TextView
                    android:id="@+id/tv_title_thongtin_khachhang"
                    style="@style/CusTextViewTitleTheme"
                    android:text="@string/title_job_detail_info_customer" />

                <TextView
                    android:id="@+id/tv_thongtin_khachhang_content"
                    style="@style/CusTextViewContentTheme"
                    android:layout_below="@+id/tv_title_thongtin_khachhang"
                    android:layout_marginLeft="@dimen/confirm_ui_padding_h"
                    android:layout_marginTop="@dimen/confirm_ui_padding_w"
                    android:text="23 Lạc trung, Hai Bà Trưng, Hà Nội" />

                <TextView
                    android:id="@+id/tv_phone_num"
                    style="@style/CusTextViewContentTheme"
                    android:layout_below="@+id/tv_thongtin_khachhang_content"
                    android:layout_marginLeft="@dimen/confirm_ui_padding_h"
                    android:layout_marginTop="@dimen/confirm_ui_padding_w"
                    android:text="@string/title_job_detail_phonenum" />

                <TextView
                    android:id="@+id/tv_phone_num_content"
                    style="@style/CusTextViewContentLinkTheme"
                    android:layout_below="@+id/tv_thongtin_khachhang_content"
                    android:layout_marginLeft="@dimen/confirm_ui_padding_h"
                    android:layout_marginTop="@dimen/confirm_ui_padding_w"
                    android:layout_toRightOf="@+id/tv_phone_num"
                    android:text="(+84) 94 818 77 99" />


                <TextView
                    android:id="@+id/tv_email"
                    style="@style/CusTextViewContentTheme"
                    android:layout_below="@+id/tv_phone_num"
                    android:layout_marginLeft="@dimen/confirm_ui_padding_h"
                    android:layout_marginTop="@dimen/confirm_ui_padding_w"
                    android:text="@string/confirm_info_profile_email" />

                <TextView
                    android:id="@+id/tv_email_content"
                    style="@style/CusTextViewContentLinkTheme"
                    android:layout_below="@+id/tv_phone_num"
                    android:layout_marginLeft="@dimen/confirm_ui_padding_h"
                    android:layout_marginTop="@dimen/confirm_ui_padding_w"
                    android:layout_toRightOf="@+id/tv_email"
                    android:text="hadvlop@gmail.com" />

                <TextView
                    android:id="@+id/tv_title_requirement"
                    style="@style/CusTextViewTitleTheme"
                    android:layout_below="@+id/tv_email"
                    android:layout_marginTop="@dimen/confirm_ui_padding_h"
                    android:text="@string/title_job_detail_requirement" />


                <TextView
                    android:id="@+id/tv_title_requirement_content"
                    style="@style/CusTextViewContentTheme"
                    android:layout_below="@+id/tv_title_requirement"
                    android:layout_marginLeft="@dimen/confirm_ui_padding_h"
                    android:layout_marginTop="@dimen/confirm_ui_padding_w"
                    android:text="Tìm thợ cài đặt lại hệ điều hành window" />

                <!--<TextView-->
                <!--android:id="@+id/tv_title_time"-->
                <!--style="@style/CusTextViewTitleTheme"-->
                <!--android:layout_below="@+id/tv_title_requirement_content"-->
                <!--android:layout_marginTop="@dimen/confirm_ui_padding_h"-->
                <!--android:text="@string/title_job_detail_time" />-->


                <!--<TextView-->
                <!--android:id="@+id/tv_title_time_content"-->
                <!--style="@style/CusTextViewContentTheme"-->
                <!--android:layout_below="@+id/tv_title_time"-->
                <!--android:layout_marginTop="@dimen/confirm_ui_padding_w"-->
                <!--android:paddingLeft="@dimen/confirm_ui_padding_h"-->
                <!--android:text="09:00 AM Thursday, May 19, 2016" />-->


                <LinearLayout
                    android:id="@+id/lout_container_view_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_image_view_page"
                    android:layout_below="@+id/tv_title_requirement_content"
                    android:orientation="vertical">


                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dip" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_title_job_num"
                    style="@style/CusTextViewTitleTheme"
                    android:layout_below="@+id/lout_container_view_image"
                    android:text="@string/title_job_detail_jobnum" />


                <TextView
                    android:id="@+id/tv_title_job_num_content"
                    style="@style/CusTextViewContentTheme"
                    android:layout_below="@+id/tv_title_job_num"
                    android:layout_marginLeft="@dimen/confirm_ui_padding_h"
                    android:layout_marginTop="@dimen/confirm_ui_padding_w"
                    android:text="372374672" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/lout_container_accept_job"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_input_text_h"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_accept_job"
            style="@style/CusButtonTheme"
            android:layout_weight="1"
            android:background="@drawable/ripple_selector_yellow"
            android:text="@string/btn_job_detail_nhanviec"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_success"
            style="@style/CusButtonTheme"
            android:layout_weight="1"
            android:background="@drawable/ripple_selector_yellow"
            android:text="@string/btn_job_detail_success"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/CusButtonTheme"
            android:layout_weight="1"
            android:background="@drawable/ripple_selector_gray_square"
            android:text="@string/btn_job_detail_cancel"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
