<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlNormal">

    <item
        android:id="@android:id/mask"
        android:state_pressed="false">
        <shape android:shape="rectangle">
            <!--<corners android:radius="5dp" />-->

            <stroke android:width="0.5sp" android:color="@color/color_yellow" />
            <solid android:color="@color/color_transparent_yellow_light" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--<corners android:radius="5dp" />-->
            <stroke android:width="0.5sp" android:color="@color/color_gray" />
            <solid android:color="@color/color_yellow" />
        </shape>
    </item>

</ripple>